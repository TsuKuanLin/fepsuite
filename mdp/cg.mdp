integrator = cg
nsteps = 5000

; prevent SHAKE problem
define = -DFLEXIBLE

cutoff-scheme = Verlet
pbc = xyz
coulombtype = PME

rcoulomb = 1.0
rvdw = 1.0

free-energy = yes
fep-lambdas = %LAMBDAS%

init-lambda-state = %STATE%

sc-alpha = 0.0025
sc-sigma = 0.1
sc-r-power = 48
sc-power = 1
sc-coul = yes
dhdl-derivatives = no
dhdl-print-energy = yes

